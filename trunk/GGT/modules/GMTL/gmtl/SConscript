import os
pj = os.path.join

Import('pkg baseEnv PREFIX')

headers = Split("""
   AABox
   AABoxOps
   AxisAngle
   AxisAngleOps
   Comparitors
   Containment
   Coord
   CoordOps
   Defines
   EulerAngle
   EulerAngleOps
   Generate
   gmtl
   Intersection
   LineSeg
   LineSegOps
   Math
   Matrix
   MatrixOps
   Output
   Plane
   PlaneOps
   Point
   Quat
   QuatOps
   Ray
   Sphere
   SphereOps
   Tri
   TriOps
   Vec
   VecBase
   VecOps
   Version
   Xforms
""")

headers = map(lambda n: n + '.h', headers)

subdirs = Split("""
   External
   Util
""")

for s in subdirs:
   SConscript(dirs = s)

for h in headers:
   baseEnv.Install(pj(PREFIX, 'include', 'gmtl'), h)
   pkg.addExtraDist([File(h)])
