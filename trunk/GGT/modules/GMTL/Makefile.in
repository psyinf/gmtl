# -----------------------------------------------------------------------------
# Basic variables.
# -----------------------------------------------------------------------------
bindir=		@bindir@
datadir=	@datadir@
exec_prefix=	@exec_prefix@
includedir=	@includedir@
instlinks=	$(topdir)/instlinks
libdir=		@libdir@
libexecdir=	@libexecdir@
prefix?=		@prefix@
projdatadir=	$(datadir)/gmtl
sbindir=	@sbindir@
sysconfdir=	@sysconfdir@
topdir=		@topdir@
top_srcdir=	@top_srcdir@
GMTLROOT_ABS=	@GMTLROOT_ABS@

MKINSTALLDIRS=	$(top_srcdir)/mkinstalldirs

all:

install:
	@$(SHELL) $(MKINSTALLDIRS) $(includedir)
	rm -rf $(includedir)/gmtl
	@$(SHELL) $(MKINSTALLDIRS) $(includedir)/gmtl
	cp -p $(GMTLROOT_ABS)/gmtl/*.h $(includedir)/gmtl
	@$(SHELL) $(MKINSTALLDIRS) $(includedir)/gmtl/External
	cp -p $(GMTLROOT_ABS)/gmtl/External/*.h $(includedir)/gmtl/External
	@$(SHELL) $(MKINSTALLDIRS) $(includedir)/gmtl/Util
	cp -p $(GMTLROOT_ABS)/gmtl/Util/*.h $(includedir)/gmtl/Util
	@$(SHELL) $(MKINSTALLDIRS) $(bindir)
	cd $(bindir) && rm -f gmtl-config && cp $(GMTLROOT_ABS)/gmtl-config .

clean cleandepend:

clobber:
